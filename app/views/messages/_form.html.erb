<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
 <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
   <% end %> 

  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-10">
      <%= f.text_area:name, class: "form-control", placeholder: "名前は必須入力かつ20文字以内" %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">内容</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control", placeholder: "内容は必須入力かつ２文字以上３０文字以下" %>
    </div>
  </div>
  
   <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">年齢</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control", placeholder: "年齢は０歳以上から" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>    
  </div>
 </div>
<% end %>
